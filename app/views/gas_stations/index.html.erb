
<div class="banner bg-light">
    <div class="container p-5">
      <div class="row" id="banner">
        <h1 class="mb-5 text-center text-primary">Encuentra tu estaci칩n de servicio</h1>
        <%= image_tag "banner_pasos.svg", class: "mx-auto", style: "width: 60%" %>
      </div>
    </div>
</div>

<div class="container mt-3">
   <div class="row">
      <div class="col-7" id="cards">
        <ul class="auto-grid">
          <% @stations.each do |station| %>
        <div class="cards">
          <li class="card p-0 bg-light" id="li-cards">

            <div class="card p-0">
            <% if  station.photo.attached? %>
              <%= cl_image_tag station.photo.key, crop: :fill, height: 200 %>
            <% end %>
            </div>

            <div class="card-body">
              <h3 class="card-title"><%= station.name %></h3>
              <p class="card-trip-pricing">Direcci칩n: <%= station.address %></p>
              <button type="button" style="width: 100%;" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%=station.id%>">Select Gas Station</button>
              <p class="btn"><%= link_to 'Ver mas >', gas_station_path(station) %></p>
            </div>

              <div class="modal fade modal-right" id="exampleModal<%=station.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <%= render "show", station: station%>
                  </div>
                </div>
              </div>

          </li>
        </div>
          <% end %>
        <a href="#" target="_blank" class="">
          <%= link_to 'A침adir Estaci칩n', new_gas_station_path, class: 'btn btn-primary', style: 'width: 100%'%>
        </a>
        </ul>
      </div>
       <div class="col-5" id="map">

        <div class="col-12" style="width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
   </div>
</div>
