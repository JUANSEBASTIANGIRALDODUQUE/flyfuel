<div class="container my-5 py-3">
  <div class="row">
    <div class="d-flex flex-column col-5 justify-content-center px-5">
      <h2 class="text-primary text-center mb-4">Inicia Sesion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="row">
          <div class="d-flex align-items-center">
              <div class="form-actions p-1 me-3 my-2 btn btn-primary">
                <%= f.button :submit, "Log in" %>
              </div>
            <% end %>
            <div class="me-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
    </div>

    <div class="d-flex col-7 justify-content-center align-items-center animate__animated animate__fadeInDown">
      <img src="http://res.cloudinary.com/depwpts87/image/upload/v1667079935/y5ekrs5d6z19hhqgr6uy.jpg" class="card-img-top">
    </div>
  </div>
</div>
