<div class="container my-5 py-3">
  <div class="row">
    <div class="d-flex flex-column col-5 justify-content-center px-5">
      <h2>Inicia Sesion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <div class="d-flex col-7 justify-content-center align-items-center">
      <img src="http://res.cloudinary.com/depwpts87/image/upload/v1667079935/y5ekrs5d6z19hhqgr6uy.jpg" class="card-img-top">
    </div>
  </div>
</div>
