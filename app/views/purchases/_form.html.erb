<%= simple_form_for(purchase) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="form-imputs my-4">
    <div class="row">
      <div class="d-flex justify-content-center align-items-center">
        <div class="d-flex flex-column col-5 me-2">
          <% products = station.gas_station_products %>
          <%=  f.association :gas_station_product, collection: products, label_method: :name %>
        </div>
        <div class="d-flex flex-column col-3 ms-2">
          <%= f.input :quantity %>
        </div>
      </div>
    </div>
  </div>

  <div class="form_actions btn btn-primary mb-4">
    <% if user_signed_in? %>
      <%= f.button :submit %>
    <% else %>
    <p>Debe iniciar sesión</p>
      <%= link_to "Iniciar Sesión", new_user_session_path %>
    <% end %>

  </div>
<% end %>
